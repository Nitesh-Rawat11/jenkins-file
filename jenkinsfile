pipeline {
    agent any
    parameters {
        string(name: 'Person', defaultValue: 'Mr Nitesh Rawat', description: 'Who should I say hello to?')
        text(name: 'Biography', defaultValue: '', description: 'Enter some information about the person')
        booleanParam(name: 'Toggle', defaultValue: true, description: 'Toggle this value')
        choice(name: 'Choice', choices: ['Dev', 'Qa', 'Uat','Prod'], description: 'Pick something')
        password(name: 'Password', defaultValue: 'Password', description: 'Enter a password')
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello %Person%"
                echo "Biography %Biography%"
                echo "Toggle %Toggle%"
                echo "Choice %choices%"
                echo "Password %Password%"
            }
        }
        stage('Test') {
            steps {
                echo 'SCM Test'
            }
        }
        stage('Build') {
            steps {
                echo 'SCM Build'
            }
        }
        stage('Depoly on Dev') {
            steps {
                echo 'SCM Deploy On DEV ENV'
            }
        }
        stage('Continue ?') {
            input{
                message "Should be contunue ?"
                ok "Yes we should"
            }
            steps {
                echo 'Deploy On PROD'
            }
        }
        stage('Deploy on Prod') {
            steps {
                echo 'SCM Deploy On PROD ENV'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        failure
        {
            echo 'Failure!'
        }
       success
       {
           echo 'Success!'
       }
    }
}
