pipeline {
    agent any
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Nitesh Rawat', description: 'Who should I say hello to?')
        text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')
        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')
        password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }
    stages {
        stage('Example') {
            steps {
                bat '''echo "Hello ${params.PERSON}"
                echo "Biography: ${params.BIOGRAPHY}"
                echo "Toggle: ${params.TOGGLE}"
                echo "Choice: ${params.CHOICE}"
                echo "Password: ${params.PASSWORD}"'''
            }
        }
        stage('Run multiple command') {
            steps {
             bat '''
             pwd
             ls '''
            }
        }
         stage('Calender') {
            steps {
               bat 'cal 2012'
            }
        }
        stage('Test') {
            steps {
                echo 'SCM Test'
            }
        }
        stage('Build') {
            steps {
                echo 'SCM Build'
            }
        }
        stage('Depoly on Dev') {
            steps {
                echo 'SCM Deploy On DEV ENV'
            }
        }
        stage('Continue ?') {
            input{
                message "Should be contunue ?"
                ok "Yes we should"
            }
            steps {
                echo 'Deploy On PROD'
            }
        }
        stage('Deploy on Prod') {
            steps {
                echo 'SCM Deploy On PROD ENV'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        failure
        {
            echo 'Failure!'
        }
       success
       {
           echo 'Success!'
       }
    }
}
